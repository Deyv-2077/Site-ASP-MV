    </style>

    <div class="overlay"></div>

    <div>
        <div class="login-form rounded">
            <div class="text-center">
                <h1 class="fw-bold">Stock System</h1>
            </div>
            <form asp-controller="Customers" asp-action="Entrar" method="post">
                <div class="form-group">
                    <label for="login">Login</label>
                    <input type="text" asp-for="Login" class="form-control" id="login" aria-describedby="emailHelp" placeholder="User">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
                <div class="form-group">
                    <label for="senha">Password</label>
                    <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Password">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-login">Login</button>
                </div>
            </form>
        </div>

        <footer>
            <!-- Conteúdo do rodapé -->
        </footer>
    </div>
</body>
