        h1 {
            font-family: "Montserrat", sans-serif;
        }


        .login-form {
            width: 300px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
        }

            .login-form .form-group {
                margin-bottom: 15px;
            }

            .login-form label {
                color: black;
                font-size: 15px;
            }

            .login-form input {
                padding: 10px;
                font-size: 12px;
            }

            .login-form .btn-login {
                padding: 10px 20px;
                font-size: 14px;
            }

        /* Estilos para o rodapé 
        footer {
            background-color: #333;
            color: white;
            padding: 20px;
            text-align: center;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
