<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    @model List<MVCApp2.Models.Customer>

    @{
        Layout = null;
    }

        $.ajax({
            url: '/Customers/Entrar',
            type: 'POST',
            dataType: 'json',
            data: {
                Login: 'username',
                Senha: 'password'
            },
            success: function (response) {
                if (response.Success) {
                    // Login bem-sucedido
                    Swal.fire('Sucesso!', 'Login bem-sucedido!', 'success').then(function () {
                        window.location.href = '/Home/Search';
                    });
                } else {
                    // Credenciais inválidas
                    Swal.fire('Erro!', 'Credenciais inválidas!', 'error');
                }
            },
            error: function (xhr, status, error) {
                // Tratar erro de requisição
                Swal.fire('Erro!', 'Ocorreu um erro na requisição.', 'error');
            }
        });
</script>
