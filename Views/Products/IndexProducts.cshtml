@model IEnumerable<MVCApp2.Models.Product>


@{

    Layout = "_LayoutProducts";


    ViewData["Title"] = "Bem-Vindo ao estoque do seu mercado";
}

<body style="background-color: white">

<h1>Estoque de produtos</h1>

<p>
        <a class="btn btn-primary" asp-controller="Products" asp-action="Create" role="button">Cadastrar novo item</a>
        <a class="btn btn-primary" asp-controller="Products" asp-action="Sacola" role="button">Sacola</a>



</p>
<table class="table" id="TableProducts">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                <a class="btn btn-light" asp-controller="Products" asp-action="Vender" asp-route-id="@item.Id" role="button">Vender</a>
                <a class="btn btn-info" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" role="button">Detalhes</a>
                <a class="btn btn-secondary" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" role="button">Editar</a>
                <a class="btn btn-danger" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" role="button">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>